<%- include('../parts/header.ejs'); %>

<div class="content-wrap">
  <div class="meta-info row">
    <h1 class="content-title">View all staff member</h1>
    <span class="total"><%= staff.length ? staff.length : '0' %></span>
    <a href="/staff/add" class="button add-item">Add Staff Member</a>
  </div>
  <div class="content">
    <table class="content-table">
      <thead>
        <tr>
          <th>Code</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>View</th>
          <th>Update</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% if(staff.length){ %>
          <% staff.forEach(emp => { %>
          <tr>
              <td>#<%= emp.Id %></td>
              <td><%= emp.Name; %></td>
              <td><%= emp.Phone; %></td>
              <td><%= emp.Email; %></td>
              <td><a href="staff/view/<%= emp.Id; %>" class="action view"><i class="fas fa-eye"></i></a></td>
              <td><a href="staff/update/<%= emp.Id; %>" class="action update"><i class="fas fa-edit"></i></a></td>
              <td><a href="staff/delete/<%= emp.Id; %>" class="action remove"><i class="fas fa-trash-alt"></i></a></td>
            </tr>
        <% }); %>
        <% } else { %>
          <tr>
            <td colspan="7">No Staff were found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../parts/footer.ejs'); %>