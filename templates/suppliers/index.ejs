<%- include('../parts/header.ejs'); %>

<div class="content-wrap">
  <div class="meta-info row">
    <h1 class="content-title">View all Suppliers</h1>
    <span class="total"><%= suppliers.length ? suppliers.length : '0' %></span>
    <a href="/suppliers/add" class="button add-item">Add Supplier</a>
  </div>
  <div class="content">
    <table class="content-table">
      <thead>
        <tr>
          <th>Code</th>
          <th>Company Name</th>
          <th>Contact Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>View</th>
          <th>Update</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% if(suppliers.length){ %>
          <% suppliers.forEach(supplier => { %>
          <tr>
              <td>#<%= supplier.Id %></td>
              <td><%= supplier.CompanyName; %></td>
              <td><%= supplier.ContactName; %></td>
              <td><%= supplier.Phone; %></td>
              <td><%= supplier.Email; %></td>
              <td><a href="suppliers/view/<%= supplier.Id; %>" class="action view"><i class="fas fa-eye"></i></a></td>
              <td><a href="suppliers/update/<%= supplier.Id; %>" class="action update"><i class="fas fa-edit"></i></a></td>
              <td><a href="suppliers/delete/<%= supplier.Id; %>" class="action remove"><i class="fas fa-trash-alt"></i></a></td>
            </tr>
        <% }); %>
        <% } else { %>
          <tr>
            <td colspan="7">No Suppliers were found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../parts/footer.ejs'); %>